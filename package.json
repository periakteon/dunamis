{
  "name": "@periakteon/dunamisjs",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --sourcemap",
    "dev": "tsup src/index.ts --format esm,cjs --dts --sourcemap --watch",
    "test": "vitest run --reporter verbose --config vitest.config.mts",
    "test:watch": "vitest watch --config vitest.config.mts",
    "test:coverage": "vitest run --coverage --config vitest.config.mts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "semantic-release": "semantic-release"
  },
  "author": "Masum Gökyüz",
  "license": "MIT",
  "description": "Minimalist framework for creating a HTTP server",
  "keywords": [
    "express",
    "framework",
    "http",
    "server",
    "typescript",
    "routing-controllers"
  ],
  "dependencies": {
    "express": "4.21.2",
    "reflect-metadata": "0.1.13",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@swc/core": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^2.1.9",
    "cookie-parser": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "express-session": "^1.18.1",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "semantic-release": "^23.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.5",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "supertest": "^7.0.0",
    "tsup": "8.0.2",
    "typescript": "5.7.2",
    "vitest": "2.1.9"
  },
  "peerDependencies": {
    "express": "4.21.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
